@model NominaEmpresa.Dominio.Trabajadores

@{
    ViewBag.Title = "Editar Trabajador";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">
        <i class="fas fa-user-edit fa-sm text-primary-50"></i> @ViewBag.Title
    </h1>
</div>

<p class="mb-4">
    <i class="fas fa-info-circle text-info"></i>
    Complete el formulario para actualizar la información del trabajador.
</p>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="fas fa-exclamation-circle"></i> @TempData["ErrorMessage"]
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.TrabajadoresCodigo)

    <div class="card shadow mb-2">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">
                <i class="fas fa-user-edit"></i> Datos del Trabajador
            </h6>
        </div>
        <div class="card-body">
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label><i class="fas fa-user"></i> Nombre</label>
                    @Html.EditorFor(model => model.TrabajadoresNombre, new { htmlAttributes = new { @class = "form-control", placeholder = "Ingrese el nombre" } })
                    @Html.ValidationMessageFor(model => model.TrabajadoresNombre, "", new { @class = "text-danger" })
                </div>
                <div class="form-group col-md-6">
                    <label><i class="fas fa-user"></i> Apellidos</label>
                    @Html.EditorFor(model => model.TrabajadoresApellido, new { htmlAttributes = new { @class = "form-control", placeholder = "Ingrese los apellidos" } })
                    @Html.ValidationMessageFor(model => model.TrabajadoresApellido, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-row">
                <div class="form-group col-md-6">
                    <label><i class="fas fa-calendar"></i> Fecha de Nacimiento</label>
                    @Html.TextBoxFor(model => model.TrabajadoresFechaNacimiento, "{0:yyyy-MM-dd}", new { @class = "form-control", @type = "date" })                    @Html.ValidationMessageFor(model => model.TrabajadoresFechaNacimiento, "", new { @class = "text-danger" })
                </div>
                <div class="form-group col-md-6">
                    <label><i class="fas fa-id-card"></i> Documento de Identidad</label>
                    @Html.EditorFor(model => model.TrabajadoresDocumentoIdentidad, new { htmlAttributes = new { @class = "form-control", placeholder = "Ingrese el documento" } })
                    @Html.ValidationMessageFor(model => model.TrabajadoresDocumentoIdentidad, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label><i class="fas fa-map-marker-alt"></i> Dirección</label>
                @Html.EditorFor(model => model.TrabajadoresDireccion, new { htmlAttributes = new { @class = "form-control", placeholder = "Ingrese la dirección completa" } })
                @Html.ValidationMessageFor(model => model.TrabajadoresDireccion, "", new { @class = "text-danger" })
            </div>

            <div class="form-row">
                <div class="form-group col-md-6">
                    <label><i class="fas fa-phone"></i> Teléfono</label>
                    @Html.EditorFor(model => model.TrabajadoresTelefono, new { htmlAttributes = new { @class = "form-control", placeholder = "Ingrese el teléfono" } })
                    @Html.ValidationMessageFor(model => model.TrabajadoresTelefono, "", new { @class = "text-danger" })
                </div>
                <div class="form-group col-md-6">
                    <label><i class="fas fa-envelope"></i> Correo Electrónico</label>
                    @Html.EditorFor(model => model.TrabajadoresEmail, new { htmlAttributes = new { @class = "form-control", placeholder = "ejemplo@correo.com" } })
                    @Html.ValidationMessageFor(model => model.TrabajadoresEmail, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="custom-control custom-switch">
                    @Html.EditorFor(model => model.TrabajadoresDiscapacidad, new { htmlAttributes = new { @class = "custom-control-input" } })
                    <label class="custom-control-label" for="TrabajadoresDiscapacidad">
                        <i class="fas fa-wheelchair"></i> ¿Presenta alguna discapacidad?
                    </label>
                </div>
            </div>
        </div>
    </div>

    <div class="card shadow">
        <div class="card-body py-3">
            <div class="d-flex justify-content-end align-items-center">
                <a href="@Url.Action("Index")" class="btn btn-sm btn-outline-secondary px-4 mr-2">
                    <i class="fas fa-arrow-left fa-sm mr-1"></i>
                    Volver
                </a>
                <button type="submit" class="btn btn-sm btn-primary px-4">
                    <i class="fas fa-save fa-sm mr-1"></i>
                    Guardar
                </button>
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}