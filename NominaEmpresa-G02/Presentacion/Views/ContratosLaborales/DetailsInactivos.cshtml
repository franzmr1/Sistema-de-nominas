@model NominaEmpresa.Dominio.ContratoLaborales
@{
    ViewBag.Title = "Detalles de Contrato Inactivo";
}

<!-- Encabezado de página -->
<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Detalles del Contrato Inactivo</h1>
    <div>
        @Html.ActionLink("Volver al Listado", "Index", null, new { @class = "btn btn-secondary btn-sm shadow-sm ml-2" })
    </div>
</div>

<!-- Contenido principal -->
<div class="row">
    <div class="col-xl-12">
        <div class="card shadow mb-4">
            <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                <h6 class="m-0 font-weight-bold text-secondary">Información del Contrato N° @Model.ContratoCodigo</h6>
                <span class="badge badge-secondary">
                    <i class="fas fa-times-circle mr-1"></i>
                    Inactivo
                </span>
            </div>
            <div class="card-body">
                <!-- Alerta de contrato inactivo -->
                <div class="alert alert-secondary mb-4">
                    <div class="d-flex align-items-center">
                        <i class="fas fa-info-circle fa-2x mr-3"></i>
                        <div>
                            <h6 class="alert-heading mb-1">Contrato Finalizado</h6>
                            <p class="mb-0">Este contrato se encuentra inactivo </p>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <!-- Información General -->
                    <div class="col-md-6">
                        <div class="card mb-4">
                            <div class="card-header py-3">
                                <h6 class="m-0 font-weight-bold text-secondary">Información General</h6>
                            </div>
                            <div class="card-body">
                                <div class="mb-3">
                                    <label class="small font-weight-bold">Código de Contrato</label>
                                    <p class="mb-0">@Model.ContratoCodigo</p>
                                </div>
                                <div class="mb-3">
                                    <label class="small font-weight-bold">Código de Trabajador</label>
                                    <p class="mb-0">@Model.Trabajador.TrabajadoresNombreCompleto</p>
                                </div>
                                <div class="mb-3">
                                    <label class="small font-weight-bold">Tipo de Contrato</label>
                                    <p class="mb-0">@Model.TipoContrato.TipoContratosNombre</p>
                                </div>
                                <div class="mb-3">
                                    <label class="small font-weight-bold">Cargo</label>
                                    <p class="mb-0">@Model.Cargo.CargosNombre</p>
                                </div>
                                <div class="mb-3">
                                    <label class="small font-weight-bold">Modalidad</label>
                                    <p class="mb-0">@Model.Modalidad.ModalidadNombre</p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Fechas y Jornada -->
                    <div class="col-md-6">
                        <div class="card mb-4">
                            <div class="card-header py-3">
                                <h6 class="m-0 font-weight-bold text-secondary">Período y Jornada Laboral</h6>
                            </div>
                            <div class="card-body">
                                <div class="row mb-3">
                                    <div class="col-sm-6">
                                        <label class="small font-weight-bold">Fecha de Inicio</label>
                                        <p class="mb-0">@Model.FechaInicio.ToShortDateString()</p>
                                    </div>
                                    <div class="col-sm-6">
                                        <label class="small font-weight-bold">Fecha de Fin</label>
                                        <p class="mb-0">@(Model.FechaFin.HasValue ? Model.FechaFin.Value.ToShortDateString() : "Indefinido")</p>
                                    </div>
                                </div>
                                <div class="mb-3">
                                    <label class="small font-weight-bold">Días Laborables</label>
                                    <p class="mb-0">@Model.DiaInicioJornada - @Model.DiaFinJornada</p>
                                </div>
                                <div class="mb-3">
                                    <label class="small font-weight-bold">Horario</label>
                                    <p class="mb-0">@Model.HoraInicioJornada - @Model.HoraFinJornada</p>
                                </div>
                                <div class="mb-3">
                                    <label class="small font-weight-bold">Sueldo Base</label>
                                    <p class="mb-0 text-secondary font-weight-bold">@Model.SueldoBase.ToString("C", new System.Globalization.CultureInfo("es-PE"))</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Información de Auditoría -->
                <div class="card mb-4">
                    <div class="card-header py-3">
                        <h6 class="m-0 font-weight-bold text-secondary">Información de Auditoría</h6>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-sm-6">
                                <label class="small font-weight-bold">Fecha de Creación</label>
                                <p class="mb-0">@Model.FechaCreacion</p>
                            </div>
                            <div class="col-sm-6">
                                <label class="small font-weight-bold">Última Modificación</label>
                                <p class="mb-0">@Model.FechaModificacion</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('[data-toggle="tooltip"]').tooltip();
        });
    </script>
}